<% layout('layouts/boilerplate') %>

    <h1>Register</h1>
    <form action="/register" class="validated-form" method="POST" novalidate>
        <div class="mb-3">
            <label class="form-label" for="location">Username</label>
            <input class="form-control" type="text" name="username" id="username" required>
            <div class="valid-feedback">Looks Good!</div>
        </div>
        <div class="mb-3">
            <label class="form-label" for="location">Email</label>
            <input class="form-control" type="email" name="email" id="email" required>
            <div class="valid-feedback">Looks Good!</div>
        </div>
        <div class="mb-3">
            <label class="form-label" for="location">Password</label>
            <input class="form-control" type="password" name="password" id="password" required>
            <div class="valid-feedback">Looks Good!</div>
        </div>
        <button class="btn btn-success">Register</button>
    </form>