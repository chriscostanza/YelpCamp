<% layout('layouts/boilerplate') %>

    <h1>All Campgrounds</h1>
    <h3><a href="/campgrounds/new">Create New Campground</a></h3>
    <% for(let campground of campgrounds) { %>
        <div class="card mb-3">
            <div class="row">
                <div class="col-md-4">
                    <img src="<%= campground.image%>" alt="" class="img-fluid">
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <h5 class="card-title">
                            <a href="campgrounds/<%= campground._id %>">
                                <%= campground.title %>
                            </a>
                        </h5>
                        <p class="card-text">
                            <%= campground.description %>
                        </p>
                        <p class="card-text">
                            <small class="text-muted">
                                <%= campground.location %>
                            </small>
                        </p>
                        <a href="/campgrounds/<%=campground._id %> " class="btn btn-primary">View <%= campground.title
                                %> </a>
                    </div>
                </div>
            </div>

        </div>

        <% } %>
            </ul>